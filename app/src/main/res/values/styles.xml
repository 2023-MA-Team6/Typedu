<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainMenuBtnStyle">
        <item name="android:layout_width">275dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/orange_btn_shape</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">6dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">35sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="PopupMenuBtnStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/orange_btn_shape</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">3dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="PopupTitleStyle">
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">30sp</item>
    </style>
</resources>