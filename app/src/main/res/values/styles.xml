<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainMenuBtnStyle">
        <item name="android:layout_width">275dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_orange_btn</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">6dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">35sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="PopupMenuBtnStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_orange_btn</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">3dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="PopupTitleStyle">
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="toolbarTitle">
        <item name="android:layout_gravity">center</item>
        <item name="android:elevation">0dp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="TypingNow">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_orange_btn</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">6dp</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="TypingWord">
        <item name="android:background">@drawable/shape_orange_btn</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">6dp</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="TypingShortNext">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_orange_btn</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">6dp</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="statusMargin">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="statusTitle">
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="statusContent">
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="statusResultTitle">
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="statusResultContent">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="statusResultExtra">
        <item name="android:fontFamily">@font/noto_sans_kr_semi_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/typeedu_grey</item>
    </style>
</resources>