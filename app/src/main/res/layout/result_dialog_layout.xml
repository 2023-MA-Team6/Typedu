<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/result_dialog_layout.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- "결과" 타이틀 -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reulst_dialog_result"
        android:textSize="20sp"
        android:textStyle="bold" />


    <!-- "목표 타수" -->
    <LinearLayout
        android:id="@+id/goalTypingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goalTypingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reulst_dialog_target_stroke"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/goalTypingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:textSize="16sp" />

    </LinearLayout>
    <!-- "평균 타수" -->
    <LinearLayout
        android:id="@+id/averageTypingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/averageTypingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reulst_dialog_average_stroke"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/averageTypingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- "최고 타수" -->
    <LinearLayout
        android:id="@+id/highestTypingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/highestTypingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reulst_dialog_highest_stroke"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/highestTypingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- "목표 정확도" -->
    <LinearLayout
        android:id="@+id/goalAccuracyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goalAccuracyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reulst_dialog_target_accuracy"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/goalAccuracyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00 %"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- "정확도" -->
    <LinearLayout
        android:id="@+id/accuracyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/accuracyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reulst_dialog_accuracy"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/accuracyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00 %"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- "소요 시간" -->
    <LinearLayout
        android:id="@+id/elapsedTimeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/elapsedTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reulst_dialog_spend_time"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/elapsedTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- 그만하기 및 다시하기 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <!-- 그만하기 버튼 -->
        <Button
            android:id="@+id/finishButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/reulst_dialog_stop"
            android:textSize="16sp" />

        <!-- 다시하기 버튼 -->
        <Button
            android:id="@+id/restartButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/reulst_dialog_recall"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>
