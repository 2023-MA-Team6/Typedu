<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/result_dialog_layout.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- "결과" 타이틀 -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결과"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- "목표 타수" -->
    <TextView
        android:id="@+id/goalTypingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="목표 타수: 000 타"
        android:textSize="16sp" />

    <!-- "평균 타수" -->
    <TextView
        android:id="@+id/averageTypingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평균 타수: 000 타"
        android:textSize="16sp" />

    <!-- "최고 타수" -->
    <LinearLayout
        android:id="@+id/highestTypingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/highestTypingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최고 타수:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/highestTypingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000 타"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- "목표 정확도" -->
    <TextView
        android:id="@+id/goalAccuracyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="목표 정확도: 00%"
        android:textSize="16sp" />

    <!-- "정확도" -->
    <TextView
        android:id="@+id/accuracyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정확도: 00%"
        android:textSize="16sp" />

    <!-- "소요 시간" -->
    <TextView
        android:id="@+id/elapsedTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소요 시간: 00:00"
        android:textSize="16sp" />

    <!-- 그만하기 및 다시하기 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <!-- 그만하기 버튼 -->
        <Button
            android:id="@+id/finishButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="그만하기"
            android:textSize="16sp" />

        <!-- 다시하기 버튼 -->
        <Button
            android:id="@+id/restartButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="다시하기"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>
