<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/long_sentence"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:background="@drawable/shape_long_paragraph_list"
        android:fontFamily="@font/noto_sans_kr_semi_bold"
        android:includeFontPadding="false"
        android:textColor="@color/typeedu_lightgrey"
        android:textAlignment="viewStart"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/currentWordText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/shape_typing_inputbox_disabled"
        android:textSize="10dp"/>
</LinearLayout>